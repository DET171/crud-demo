datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Movie {
  id         Int      @id @default(autoincrement())
  title      String
  year       Int
  directorId Int
  director   Director @relation(fields: [directorId], references: [id])
}

model Director {
  id     Int     @id @default(autoincrement())
  name   String
	dob		 DateTime
  movies Movie[]
}
